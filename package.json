{
  "name": "hoa-director-server",
  "version": "0.0.0",
  "description": "A web application for managing a Home Owners Association",
  "main": "dist/src/server.js",
  "private": true,
  "contributors": [
    "Dexter St Pierre <dexter.stpierre.dev@gmail.com>",
    "John Gellert <gellertjm@gmail.com>"
  ],
  "keywords": [
    "hoa",
    "home owners association",
    "management",
    "property management"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "build-dev": "npm run clean && npm run build",
    "build-server-watch": "tsc-watch --project tsconfig.server.json --onSuccess \"npm run copy-static-assets\"",
    "build-server": "tsc --project tsconfig.server.json",
    "build": "npx tsc && npm run copy-static-assets",
    "clean": "rm -fR dist/",
    "copy-static-assets": "npx tsc ./src/copyStaticAssets.ts",
    "lint-server": "tslint -c tslint.json -p tsconfig.server.json",
    "serve-watch": "nodemon dist/server.js",
    "serve": "node dist/src/server.js",
    "start": "npm run serve",
    "dev": "nodemon src/server.ts"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "concurrently": "^8.2.0",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.0",
    "jsonwebtoken": "^9.0.1",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.1",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.1",
    "shelljs": "^0.8.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^16.18.39",
    "@types/nodemailer": "^6.4.8",
    "@types/sequelize": "^4.28.15",
    "@types/shelljs": "^0.8.13",
    "@types/uuid": "^9.0.2",
    "@types/validator": "^13.7.17",
    "nodemon": "^2.0.12",
    "ts-node": "^10.9.2",
    "tsc-watch": "^1.1.39",
    "tslint": "^5.9.1",
    "tsx": "^3.14.0",
    "typescript": "^4.9.5"
  }
}
